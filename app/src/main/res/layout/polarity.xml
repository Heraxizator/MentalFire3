<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border3"
    android:clickable="false"
    android:clipChildren="false"
    android:focusable="false"
    android:orientation="horizontal"
    android:padding="5dp">

    <EditText
        android:id="@+id/fedit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:clickable="false"
        android:contextClickable="false"
        android:cursorVisible="true"
        android:foregroundTint="@color/yellow"
        android:gravity="center"
        android:hint="@string/negative"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="16"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textCursorDrawable="@color/yellow"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="false"
        android:contentDescription=""
        android:focusable="false"
        app:srcCompat="@drawable/ic_decrease" />

    <EditText
        android:id="@+id/sedit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:clickable="false"
        android:contextClickable="false"
        android:foregroundTint="@color/yellow"
        android:gravity="center"
        android:hint="@string/positive"
        android:imeOptions="actionGo|actionNext"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="16"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textCursorDrawable="@color/yellow"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>