<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_tab"
            android:visibility="gone"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/increase"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_increase"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/decrease"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_decrease"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_bold"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/italic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_italic"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/underlined"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_underlined"
            android:visibility="gone"
            tools:ignore="SpeakableTextPresentCheck" />


        <ImageButton
            android:id="@+id/bulled"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_list1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/numeric"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_list2"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/textarea"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="350dp"
            android:layout_height="600dp"
            android:layout_marginTop="80dp"

            android:background="@drawable/shadow"
            android:gravity="top|left"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollIndicators="none"
            android:scrollbars="none"
            android:text="    "
            android:textColor="@color/cardview_dark_background"
            android:textColorHighlight="@color/yellow"
            android:textColorLink="@color/yellow"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>